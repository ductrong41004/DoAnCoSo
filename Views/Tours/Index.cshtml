@model IEnumerable<TourDuLich.Models.Tour>
@{
    ViewData["Title"] = "Trang chủ Tour Du Lịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: linear-gradient(135deg, #e0e7ff 0%, #fff 100%);
    }

    .hero-ivivu {
        position: relative;
        width: 100%;
        min-height: 420px;
        background: url('/images/bg/anhbia.jpg') center center no-repeat;
        background-size: cover;
        border-radius: 0 0 48px 48px;
        box-shadow: 0 8px 32px rgba(30,144,255,.10);
        overflow: hidden;
    }


    .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(30, 64, 175, 0.25);
        z-index: 1;
    }

    .ivivu-searchbox {
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.98);
        border-radius: 24px;
        box-shadow: 0 10px 32px rgba(30,144,255,.18);
        padding: 28px 32px 20px 32px;
        width: 70%;
        position: absolute;
        left: 50%;
        top: 60%;
        transform: translate(-50%, -50%);
        z-index: 2;
        backdrop-filter: blur(2px);
    }

    .search-group {
        display: flex;
        align-items: center;
        background: #f8fafc;
        border-radius: 14px;
        box-shadow: 0 2px 8px rgba(30,144,255,.07);
        padding: 0 12px;
        flex: 1 1 220px;
        min-width: 180px;
        transition: box-shadow 0.2s;
    }

        .search-group:focus-within {
            box-shadow: 0 4px 16px rgba(30,144,255,.13);
        }

    .search-icon {
        color: #1976d2;
        font-size: 1.3rem;
        margin-right: 8px;
    }

    .search-input {
        border: none;
        background: transparent;
        padding: 14px 0;
        font-size: 1.08rem;
        width: 100%;
        outline: none;
    }

    .btn-find {
        border-radius: 14px;
        padding: 14px 38px;
        background: linear-gradient(90deg, #ff9800 0%, #ff5e62 100%);
        color: #fff;
        font-weight: bold;
        border: none;
        font-size: 1.15rem;
        box-shadow: 0 2px 12px rgba(255,152,0,.12);
        transition: background 0.2s, transform 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-find:hover {
            background: linear-gradient(90deg, #1976d2 0%, #00c6ff 100%);
            transform: translateY(-2px) scale(1.04);
        }

    .ivivu-info-row {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #fff;
        margin: -38px auto 36px auto;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(30,144,255,.10);
        padding: 22px 36px;
        max-width: 900px;
        position: relative;
        z-index: 3;
        gap: 12px;
    }

    .ivivu-info-item {
        flex: 1;
        text-align: center;
        padding: 0 18px;
        font-size: 1.13rem;
        transition: transform 0.2s;
    }

        .ivivu-info-item:hover {
            transform: translateY(-4px) scale(1.04);
        }

        .ivivu-info-item .bi {
            font-size: 2.1rem;
            color: #1976d2;
            margin-bottom: 6px;
            filter: drop-shadow(0 2px 6px #b6c2e2);
        }

        .ivivu-info-item b {
            color: #ff9800;
            font-size: 1.13em;
        }

    .tour-list-section {
        margin-top: 38px;
    }

    .tour-card {
        border-radius: 22px;
        box-shadow: 0 4px 24px rgba(30,144,255,.13);
        background: #fff;
        margin-bottom: 32px;
        transition: box-shadow 0.2s, transform 0.2s;
        overflow: hidden;
        position: relative;
    }

        .tour-card:hover {
            box-shadow: 0 12px 36px rgba(30,144,255,.18);
            transform: translateY(-6px) scale(1.03);
        }

    .tour-img {
        width: 100%;
        height: 210px;
        object-fit: cover;
        border-radius: 22px 22px 0 0;
        transition: filter 0.2s;
    }

    .tour-card:hover .tour-img {
        filter: brightness(0.93) saturate(1.1);
    }

    .tour-badge {
        position: absolute;
        left: 18px;
        top: 18px;
        background: linear-gradient(90deg, #ff3434 0%, #ff9800 100%);
        color: #fff;
        font-size: 1em;
        font-weight: 700;
        border-radius: 8px;
        padding: 6px 16px;
        box-shadow: 0 2px 8px rgba(0,0,0,.13);
        letter-spacing: 1px;
        z-index: 2;
    }

    /* ---- MEDIA QUERIES FIXED ---- */
    media (max-width: 991px) {
        .ivivu-searchbox

    {
        width: 95%;
        padding: 18px 8px 12px 8px;
    }

    .search-group {
        min-width: 120px;
    }

    .ivivu-info-row {
        flex-direction: column;
        padding: 18px 8px;
    }

    .tour-img {
        height: 160px;
    }

    }
    media (max-width: 575px) {
        .ivivu-searchbox

    {
        flex-direction: column;
        gap: 12px;
        padding: 12px 4px;
    }

    .search-group {
        width: 100%;
    }

    .hero-ivivu {
        min-height: 260px;
        border-radius: 0 0 24px 24px;
    }

    .tour-card {
        border-radius: 14px;
    }

    .tour-img {
        border-radius: 14px 14px 0 0;
    }

    }
</style>


<!-- Banner lớn + Search -->
<div class="hero-ivivu mb-4">
    <div class="hero-overlay"></div>
    <form class="ivivu-searchbox shadow" autocomplete="off">
        <div class="search-group">
            <span class="search-icon"><i class="bi bi-geo-alt"></i></span>
            <input type="text" placeholder="Bạn muốn đi đâu?" class="search-input" />
        </div>
        <div class="search-group">
            <span class="search-icon"><i class="bi bi-calendar-event"></i></span>
            <input type="date" class="search-input" />
        </div>
        <div class="search-group">
            <span class="search-icon"><i class="bi bi-signpost"></i></span>
            <select class="search-input">
                <option>Khởi hành từ Hồ Chí Minh</option>
                <option>Khởi hành từ Hà Nội</option>
                <option>Khởi hành từ Đà Nẵng</option>
            </select>
        </div>
        <button class="btn-find" type="submit">
            <i class="bi bi-search"></i> Tìm
        </button>
    </form>
</div>

<!-- Info hàng ngang -->
<div class="ivivu-info-row">
    <div class="ivivu-info-item">
        <i class="bi bi-globe-americas"></i>
        <div><b>1.000+ tours</b><br><small>Chất lượng trong và ngoài nước</small></div>
    </div>
    <div class="ivivu-info-item">
        <i class="bi bi-emoji-heart-eyes"></i>
        <div><b>10K+ đánh giá 5 sao</b><br><small>Khách hàng đã đặt tour</small></div>
    </div>
    <div class="ivivu-info-item">
        <i class="bi bi-cash-stack"></i>
        <div><b>100+ ưu đãi mỗi ngày</b><br><small>Đặt sớm, nhóm, phút chót</small></div>
    </div>
</div>

<!-- Tour card nổi bật -->
<div class="tour-list-section container">
    <h2 class="fw-bold mb-3 text-gradient" style="font-size:2.1rem; background: linear-gradient(90deg,#1976d2,#ff9800); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        Tour Ưu Đãi Tốt Nhất Hôm Nay
    </h2>
    <div class="row">
        @foreach (var tour in Model.Take(3))
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="tour-card position-relative h-100">
                    <img src="/images/products/@tour.ImageUrl" class="tour-img" alt="@tour.TourName" />
                    <span class="tour-badge"><i class="bi bi-fire"></i> Hot</span>
                    <div class="p-3">
                        <div class="fw-bold mb-1" style="font-size:1.18rem;">@tour.TourName</div>
                        <div class="text-secondary mb-2" style="min-height:40px;">@tour.Description</div>
                        <div class="fw-bold text-primary mb-2" style="font-size:1.15rem;">
                            @String.Format("{0:#,0}", tour.Price) đ
                        </div>
                        <a href="#" class="btn btn-warning btn-sm fw-bold mt-2 rounded-pill px-4 shadow-sm">
                            <i class="bi bi-arrow-right-circle"></i> Xem Tour
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model TourDuLich.Models.Tour
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết Tour";
}

<div class="container mt-4">
    <!-- Tiêu đề trang nổi bật -->
    <div class="page-title">
        <h2><i class="bi bi-eye"></i> Chi tiết Tour Du Lịch</h2>
    </div>

    <!-- Container chính với thiết kế đẹp -->
    <div class="form-container-modern">
        <!-- Header với tên tour -->
        <div class="tour-header mb-4">
            <h3 class="text-primary fw-bold mb-3">
                <i class="bi bi-map me-2"></i>@Model.TourName
            </h3>
            <div class="tour-status-badges">
                <span class="badge bg-success fs-6 me-2">
                    <i class="bi bi-calendar-check me-1"></i>
                    @Model.DepartureDate.ToString("dd/MM/yyyy")
                </span>
                <span class="badge bg-info fs-6 me-2">
                    <i class="bi bi-people me-1"></i>
                    @{
                        var totalSeats = Model.GetDepartureDatesWithSeats().Values.Sum();
                    }
                    @totalSeats chỗ (tổng)
                </span>
                <span class="badge bg-warning text-dark fs-6">
                    <i class="bi bi-currency-dollar me-1"></i>
                    @Model.Price.ToString("N0") đ
                </span>
            </div>
        </div>

        <!-- Thông tin chi tiết -->
        <div class="row">
            <!-- Cột trái - Thông tin -->
            <div class="col-lg-6">
                <div class="info-section">
                    <h5 class="section-title">
                        <i class="bi bi-info-circle text-primary me-2"></i>Thông tin Tour
                    </h5>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="bi bi-geo-alt text-danger me-2"></i>Địa điểm
                        </div>
                        <div class="info-value">@Model.Location</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="bi bi-calendar-event text-success me-2"></i>Ngày khởi hành
                        </div>
                        <div class="info-value">@Model.DepartureDate.ToString("dddd, dd/MM/yyyy")</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="bi bi-cash-stack text-warning me-2"></i>Giá tour
                        </div>
                        <div class="info-value price-highlight">@Model.Price.ToString("N0") đ</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="bi bi-people-fill text-info me-2"></i>Số chỗ còn lại
                        </div>
                        <div class="info-value">
                            @{
                                var totalSeatsDetail = Model.GetDepartureDatesWithSeats().Values.Sum();
                            }
                            <span class="badge bg-info text-dark fs-6">@totalSeatsDetail chỗ (tổng)</span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="bi bi-clock text-secondary me-2"></i>Ngày tạo
                        </div>
                        <div class="info-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>

            <!-- Cột phải - Mô tả -->
            <div class="col-lg-6">
                <div class="description-section">
                    <h5 class="section-title">
                        <i class="bi bi-file-text text-primary me-2"></i>Mô tả Tour
                    </h5>
                    <div class="description-content">
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>
        </div>

        <!-- Phần hiển thị ảnh -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="images-section mt-4">
                <h5 class="section-title">
                    <i class="bi bi-images text-primary me-2"></i>Hình ảnh Tour
                </h5>
                <div class="row g-3">
                    @foreach (var image in Model.ImageUrl.Split(';').Where(img => !string.IsNullOrEmpty(img)))
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="image-card">
                                <img src="@image" alt="@Model.TourName" class="tour-detail-image"
                                     data-bs-toggle="modal" data-bs-target="#imageModal"
                                     onclick="showImageModal('@image')" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Nút hành động -->
        <div class="action-buttons mt-4 pt-3 border-top">
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                </a>
                <a asp-action="Edit" asp-route-id="@Model.TourId" class="btn btn-warning btn-lg px-4">
                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.TourId" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-trash me-2"></i>Xóa tour
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal hiển thị ảnh lớn -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Hình ảnh Tour</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="Tour Image" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<style>
    /* === STYLING CHO DETAILS PAGE === */
    .tour-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 25px;
        border-radius: 15px;
        border-left: 5px solid #2196F3;
    }

    .tour-status-badges {
        margin-top: 15px;
    }

    .section-title {
        color: #2196F3;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e9ecef;
    }

    .info-section, .description-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 15px;
        height: 100%;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #dee2e6;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
        flex: 1;
    }

    .info-value {
        font-weight: 500;
        color: #212529;
        text-align: right;
        flex: 1;
    }

    .price-highlight {
        color: #ff9800 !important;
        font-size: 1.2em;
        font-weight: 700;
    }

    .description-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #dee2e6;
        line-height: 1.6;
        color: #495057;
    }

    .images-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 15px;
    }

    .image-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .image-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }

    .tour-detail-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .tour-detail-image:hover {
        transform: scale(1.05);
    }

    .action-buttons {
        background: #f8f9fa;
        margin: 0 -40px -40px -40px;
        padding: 25px 40px;
        border-radius: 0 0 25px 25px;
    }

    /* Responsive */
    media (max-width: 768px) {
        .info-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 5px;
        }

        .info-value {
            text-align: left;
        }

        .tour-detail-image {
            height: 150px;
        }

        .action-buttons .d-flex {
            flex-direction: column;
        }

        .action-buttons .btn {
            width: 100%;
        }
    }
</style>

<script>
    function showImageModal(imageSrc) {
        document.getElementById('modalImage').src = imageSrc;
    }
</script>
